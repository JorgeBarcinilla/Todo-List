<section>
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-12 mt-5">
        <form class="task-form" id="contactForm" name="sentMessage" novalidate="novalidate">
          <div class="row justify-content-center">
            <div class="col-md-12">
              <h3 class="title-create-task">New Task</h3>
            </div>
            <div class="col-md-6 form-group">
              <label for="">Title</label>
              <input class="form-control" type="text" placeholder="" required="required"
                data-validation-required-message="Please enter your name.">
              <p class="help-block text-danger"></p>
            </div>
            <div class="col-md-6 form-group">
              <label for="">Limit date</label>
              <input class="form-control" type="text" placeholder="" required="required"
                data-validation-required-message="Please enter your email address.">
              <p class="help-block text-danger"></p>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label for="">Description</label>
                <textarea class="form-control" id="mensaje" placeholder="" required="required"
                  data-validation-required-message="Please enter a message." style="height: 120px"></textarea>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="col-md-12">
              <a class="btn btn-create-task">Create Task</a>
              <a class="btn btn-cancel-task">Cancel</a>
            </div>
          </div>

        </form>
      </div>
    </div>

  </div>
</section>